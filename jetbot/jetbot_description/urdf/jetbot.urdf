<?xml version="1.0" ?>

<robot name="jetbot" xmlns:xacro="http://www.ros.org/wiki/xacro">>
    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/jetbot</robotNamespace>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>50.0</updateRate>
            <robotBaseFrame>chassis</robotBaseFrame>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.2</wheelDiameter>
            <torque>0.1</torque>
            <leftJoint>left_wheel_hinge</leftJoint>
            <rightJoint>right_wheel_hinge</rightJoint>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <gaussianNoise>0.01</gaussianNoise>
        </plugin>
    </gazebo>

    <link name="chassis">
        <pose>0 0 0 0 0 0</pose>

        <inertial>
            <mass value="5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
        </inertial>

        <collision>
            <geometry>
                <mesh filename="model://jetbot/meshes/JetBot-v3-Chassis.dae" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="model://jetbot/meshes/JetBot-v3-Chassis.dae" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
    </link>

    <link name="left_wheel">
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
        </inertial>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
	        <geometry>
	            <mesh filename="model://jetbot/meshes/JetBot-v3-Wheel.stl" scale="0.01 0.01 0.01"/>
	        </geometry>
        </collision>

	    <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
	        <geometry>
	            <mesh filename="model://jetbot/meshes/JetBot-v3-Wheel.stl" scale="0.01 0.01 0.01"/>
	        </geometry>
	    </visual>
    </link>

    <joint name='left_wheel_hinge' type='revolute'>
        <child  link="left_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000000" lower="-1.6" upper="1.6" velocity="0.7"/>
        <origin rpy="0 0 0" xyz="-0.5 0 0.15"/>
    </joint>

    <link name="right_wheel">
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
        </inertial>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
	          <geometry>
	              <mesh filename="model://jetbot/meshes/JetBot-v3-Wheel.stl" scale="0.01 0.01 0.01"/>
	          </geometry>
        </collision>

	    <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
	        <geometry>
	            <mesh filename="model://jetbot/meshes/JetBot-v3-Wheel.stl" scale="0.01 0.01 0.01"/>
	        </geometry>
	    </visual>
    </link>

    <joint name='right_wheel_hinge' type='revolute'>
        <child  link="right_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000000" lower="-1.6" upper="1.6" velocity="0.7"/>
        <origin rpy="0 0 0" xyz="0.5 0 0.15"/>
    </joint>

    <link name="camera_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1" />
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
	      <visual>
	          <geometry>
	              <box size="0.001 0.001 0.001"/>
	          </geometry>
	          <material name="blue">
	              <color rgba="0 0 1.0 1.0"/>
	          </material>
	      </visual>
    </link>

    <joint name="camera_joint" type="fixed">
        <parent link="chassis"/>
        <child link="camera_link"/>
        <origin rpy="0 0 0" xyz="0.047 0.0 0.0"/>
        <axis xyz="1 0 0" />
    </joint>

    <gazebo reference="chassis">
        <mu>0</mu>
        <mu2>0</mu2>
        <slip1>1.0</slip1>
        <slip2>1.0</slip2>
    </gazebo>

    <!-- Camera Sensor -->
    <gazebo reference="camera_link">
      <sensor type="camera" name="camera_camera_sensor">
        <update_rate>30.0</update_rate>
        <camera>
          <pose>0.035 0 0.078 0 0 0</pose>
          <horizontal_fov>1.3962634</horizontal_fov>
          <image>
            <format>R8G8B8</format>
            <width>1280</width>
            <height>720</height>
          </image>
          <clip>
            <near>0.01</near>
            <far>1</far>
          </clip>
        </camera>

        <plugin name="camera_camera_controller" filename="libgazebo_ros_camera.so">
          <alwaysOn>true</alwaysOn>
          <updateRate>0.0</updateRate>
          <cameraName>arm_sensor/camera</cameraName>
          <imageTopicName>image_raw</imageTopicName>
          <cameraInfoTopicName>camera_info</cameraInfoTopicName>
          <frameName>camera_link</frameName>
          <hackBaseline>0.07</hackBaseline>
          <distortionK1>0.0</distortionK1>
          <distortionK2>0.0</distortionK2>
          <distortionK3>0.0</distortionK3>
          <distortionT1>0.0</distortionT1>
          <distortionT2>0.0</distortionT2>
        </plugin>
      </sensor>
    </gazebo>
 
